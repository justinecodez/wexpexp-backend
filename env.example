# Database
DATABASE_PATH="./database.sqlite"

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRE_TIME="1h"
JWT_REFRESH_EXPIRE_TIME="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@tanzaniaevents.com"
FROM_NAME="Tanzania Events Platform"

# SMS Configuration (Tanzania)
SMS_PROVIDER="beem"
BEEM_API_KEY="your-beem-api-key"
BEEM_SECRET_KEY="your-beem-secret-key"
TTCL_USERNAME="your-ttcl-username"
TTCL_PASSWORD="your-ttcl-password"

# WhatsApp Business API
# Get these from https://developers.facebook.com/apps/
WHATSAPP_TOKEN="your-whatsapp-business-token"
WHATSAPP_PHONE_ID="your-phone-number-id"
WHATSAPP_VERIFY_TOKEN="your-verify-token"
WHATSAPP_API_VERSION="v18.0"

# Payment Gateways (Tanzania)
MPESA_CONSUMER_KEY="your-mpesa-consumer-key"
MPESA_CONSUMER_SECRET="your-mpesa-consumer-secret"
TIGO_PESA_CLIENT_ID="your-tigo-pesa-client-id"
TIGO_PESA_CLIENT_SECRET="your-tigo-pesa-client-secret"
AIRTEL_MONEY_CLIENT_ID="your-airtel-money-client-id"
AIRTEL_MONEY_CLIENT_SECRET="your-airtel-money-client-secret"

# Cloud Storage (S3 / Cloudflare R2 / Backblaze B2)
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_ENDPOINT="https://<accountid>.r2.cloudflarestorage.com"
S3_BUCKET_NAME="wexp-storage"
S3_REGION="auto"
S3_PUBLIC_URL_BASE="https://pub-<hash>.r2.dev" # Or your custom domain

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Google Maps API
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Tanzania Specific
DEFAULT_TIMEZONE="Africa/Dar_es_Salaam"
DEFAULT_CURRENCY="TZS"
DEFAULT_PHONE_COUNTRY_CODE="+255"

# Admin Configuration
ADMIN_EMAIL="admin@tanzaniaevents.com"
ADMIN_PASSWORD="SecurePassword123!"
